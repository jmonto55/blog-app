<div class="p-5 w-screen flex flex-col items-center bg-white bg-opacity-10 text-white rounded-2xl shadow-5xl border-2 border-t-0 border-l-0 border-white/25">

<h2 class="text-zinc-200">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field text-zinc-200">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "text-black" %>
  </div>

  <div class="field text-zinc-200">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "text-black" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field text-zinc-200">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions text-zinc-200">
    <%= f.submit "Log in", class: "cursor-pointer mt-8 bg-white bg-opacity-10 text-white rounded-2xl shadow-5xl border-2 border-t-0 border-l-0 border-white/25 p-2" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>