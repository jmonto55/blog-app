<section class="w-full max-w-64 flex flex-col mb-24">
  <div class="p-5 flex flex-col gap-8 bg-white bg-opacity-10 text-white rounded-2xl shadow-5xl border-2 border-t-0 border-l-0 border-white/25">
    <card class="post-item">
        <div class="post-data-main">
          <div class="post-header">
            <p>Post <%= @post.id %> by <%= @post.author.name %> </p>
            <div class="flex gap-8 justify-end">
              <h5 class="custom-card-p">Comments: <%= @post.comments_counter %> </h5>
              <h5 class="custom-card-p">❤️ <%= @post.likes_counter %> </h5>
            </div>
          </div>
          <p> <%= @post.text %> </p>
        </div>
    </card>
    <div class="">
      <% if @post.comments.empty? %>
        <p class="text-sm text-zinc-200 text-opacity-50 italic"> No comments yet. </p>
      <% end %>
      <% @post.comments.each do |comment| %>
        <p class="text-sm mt-2 ml-8"> <%= comment.author.name %>: <%= comment.text %> </p>
      <% end %>
    </div>
  </div>
</section>
