<section class="flex flex-col mb-24">
  <h1 class="text-zinc-200 text-3xl md:text-5xl mb-20">Welcome to Blog ðŸ“®</h1>
  <div class="flex flex-col gap-8">
    <% @users.each do |user| %>
      <%= link_to "/users/#{user.id}", remote: false do %>
        <card class="flex items-center gap-8 bg-white bg-opacity-10 text-white rounded-2xl shadow-5xl border-2 border-b-0 border-r-0 border-white/25">
          <%= image_tag(user.photo, class: "w-24 md:w-48 rounded-l-2xl") %>
          <div class="flex h-24 w-80 justify-between">
            <h2 class="text-2xl md:text-4xl text-zinc-200"><%= user.name %></h2><br>
            <h4 class="text-zinc-200 self-end mr-4 md:mr-12">Number of posts: <%= user.posts_counter %> </h4>
          </div>
        </card>
      <% end %>
    <% end %>
  </div>
</section>
